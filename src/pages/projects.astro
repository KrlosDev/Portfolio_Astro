---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import gptCodexImg from "../images/gpt-codex.png";
import mernChatImg from "../images/mern-chat.png";
import socialImg from "../images/social.png";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div class="mb-5 md:h-dvh">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Featured Projects</div>
  </div>
  <HorizontalCard
    title="Social Express"
    img={socialImg}
    text="Social Express is a social media web application built using the MERN stack (MongoDB, Express.js, React, Node.js). This application allows users to create accounts, post updates, and interact with other users in a social network environment."
    url="https://github.com/KrlosDev/Social-Media-App/"
  />
  <HorizontalCard
    title="GTP-3.5-API-Codex-App"
    img={gptCodexImg}
    text="Web application that utilizes the OpenAI GPT-3 Codex API to provide code generation and completion functionalities."
    url="https://github.com/KrlosDev/GTP-3-API-Codex-App"
    tags={["VanillaJS"]}
  />
  <div class="divider my-0"></div>

  <HorizontalCard
    title="Real Time Chat App"
    img={mernChatImg}
    text="A full-stack chat application built using the MERN stack (MongoDB, Express.js, React, Node.js). The chat application is designed with various features to enhance user experience, including real-time updates using WebSockets, online status indicators, file uploads/attachments, and auto-scrolling, among others."
    url="https://github.com/KrlosDev/mern-chat"
    tags={["WebSockets"]}
  />
